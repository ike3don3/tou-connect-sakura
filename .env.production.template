# 本番環境用環境変数テンプレート
# このファイルをコピーして .env.production として使用し、実際の値を設定してください

# 環境設定
ENVIRONMENT=production

# セキュリティ設定
SECRET_KEY=your-super-secure-secret-key-here-32-chars-minimum
PRODUCTION_SECRET_KEY=your-super-secure-secret-key-here-32-chars-minimum

# データベース設定（PostgreSQL推奨）
DATABASE_URL=postgresql://username:password@localhost:5432/tou_connect_prod

# Redis設定（キャッシュ・セッション用）
REDIS_URL=redis://localhost:6379/0

# 外部API設定（Secrets Managerから取得推奨）
GEMINI_API_KEY=your-gemini-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# シークレット管理設定
SECRETS_PROVIDER=aws  # aws, azure, env
AWS_REGION=ap-northeast-1
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# CORS設定
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ログ設定
LOG_LEVEL=WARNING
GUNICORN_LOG_LEVEL=info
GUNICORN_ACCESS_LOG=/var/log/tou_connect/access.log
GUNICORN_ERROR_LOG=/var/log/tou_connect/error.log

# Gunicorn設定
GUNICORN_WORKERS=4
PORT=5000
GUNICORN_USER=www-data
GUNICORN_GROUP=www-data

# 監視・メトリクス設定
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# SSL/TLS設定
PREFERRED_URL_SCHEME=https

# レート制限設定
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000 per hour